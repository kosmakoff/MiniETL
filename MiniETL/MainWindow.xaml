<Window x:Class="MiniETL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:MiniETL.UI"
        xmlns:components="clr-namespace:MiniETL.Components"
        xmlns:miniEtl="clr-namespace:MiniETL"
        Title="Mini ETL" Height="480" Width="640">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<StackPanel>
			<Expander IsExpanded="True" Header="Common Blocks">
				<ui:Toolbox>
					<components:FileInputComponentGenerator />
					<components:FileOutputComponentGenerator />
				</ui:Toolbox>
			</Expander>
		</StackPanel>
		<GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
		<ScrollViewer Grid.Column="2" Background="Transparent" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
			<ui:DesignerCanvas  AllowDrop="True" Background="Transparent" ClipToBounds="True"
								DataContext="{Binding Components, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type miniEtl:MainWindow}}}" />
		</ScrollViewer>
	</Grid>
</Window>
