<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:MiniETL.Converters"
                    xmlns:adorners="clr-namespace:MiniETL.Adorners">
	<converters:TransformConverter x:Key="transformConverter"/>
	<converters:NegateRotationConverter x:Key="negateRotationConverter" />

	<Style TargetType="{x:Type adorners:RotationChrome}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type adorners:RotationChrome}">
					<Grid SnapsToDevicePixels="True" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5, 0.5">
						<Grid.RenderTransform>
							<RotateTransform Angle="{Binding Mode=OneWay, Path=RenderTransform, Converter={StaticResource negateRotationConverter}}"></RotateTransform>
						</Grid.RenderTransform>
						<Border Background="White" BorderBrush="Black" BorderThickness="1">
							<StackPanel Margin="3" Orientation="Horizontal">
								<TextBlock Text="{Binding Mode=OneWay, Path=RenderTransform, Converter={StaticResource transformConverter}}" ></TextBlock>
								<TextBlock Text=" °"></TextBlock>
							</StackPanel>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>