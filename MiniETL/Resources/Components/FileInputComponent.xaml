<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:components="clr-namespace:MiniETL.Components">
	<DataTemplate DataType="{x:Type components:FileInputComponentGenerator}">
		<TextBlock Text="{Binding Path=DisplayName}">
			<TextBlock.ToolTip>
				<ToolTip>
					<TextBlock Text="{Binding Path=Description}"></TextBlock>
				</ToolTip>
			</TextBlock.ToolTip>
		</TextBlock>
	</DataTemplate>

	<DataTemplate DataType="{x:Type components:FileInputComponent}">
		<Border Background="PowderBlue" Padding="5" CornerRadius="5" Margin="5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<TextBlock FontWeight="Bold" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
						   IsHitTestVisible="False">
					<Run Text="{Binding Path=Name}" />
				</TextBlock>
				<!-- Rectangle Fill="Plum" Grid.Row="1" / -->
				<TextBox Grid.Row="1" Text="ASDF" AcceptsReturn="True" />
			</Grid>
		</Border>
	</DataTemplate>
</ResourceDictionary>